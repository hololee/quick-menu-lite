<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#405f70" >

    <TextView
        android:layout_centerVertical="true"
        android:textSize = "25dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text= "SETTINGS"
        android:id="@+id/textView" />

        <ImageView
            android:id = "@+id/button"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="65dp"
            android:layout_height="23dp"
            android:background="@drawable/on"
            android:layout_alignParentRight="true"
            />

       </RelativeLayout>

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/top"
        android:background="#43555c" />

 <ListView
     android:layout_above="@+id/xmladview"
     android:id = "@+id/list"
     android:layout_below="@id/topLine"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
    >



 </ListView>

    <com.fsn.cauly.CaulyAdView xmlns:app="http://schemas.android.com/apk/res/com.hanstudio.quick.lite"
        android:id="@+id/xmladview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        app:appcode="HT38xrqf"
        app:effect="RightSlide"
        app:dynamicReloadInterval="true"
        app:reloadInterval="20"
        app:bannerHeight="Fixed"
        />

</RelativeLayout>
