<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#405f70">

        <TextView

            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/backButton"
            android:text="@string/title4"
            android:textColor="#ffffff"
            android:textSize="25dp" />


        <Button
            android:id="@+id/backButton"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back_button" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/top"
        android:background="#e6e6e6">

        <ImageView
            android:id = "@+id/icon"
            android:layout_width="270dp"
            android:layout_height="57dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/item_list"
            />
    </RelativeLayout>


    <View
        android:id="@+id/bar1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/back"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/bar1">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="1"
            android:textColor="#696969"
            android:textSize="20dp"
            android:typeface="monospace" />

        <ImageView
            android:id = "@+id/sub1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />




    </RelativeLayout>

    <View
        android:id="@+id/bar2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/list1"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/bar2">

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="2"
            android:textColor="#696969"
            android:textSize="20dp"
            android:typeface="monospace" />
        <ImageView
            android:id = "@+id/sub2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

    <View
        android:id="@+id/bar3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/list2"
        android:background="#dcdcdc" />


    <RelativeLayout
        android:id="@+id/list3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/bar3">

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="3"
            android:textColor="#696969"
            android:textSize="20dp"
            android:typeface="monospace" />
        <ImageView
            android:id = "@+id/sub3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

    <View
        android:id="@+id/bar4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/list3"
        android:background="#dcdcdc" />


    <RelativeLayout
        android:id="@+id/list4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/bar4">

        <TextView
            android:id="@+id/title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="4"
            android:textColor="#696969"
            android:textSize="20dp"
            android:typeface="monospace" />

        <ImageView
            android:id = "@+id/sub4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>

    <View
        android:id="@+id/bar5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/list4"
        android:background="#dcdcdc" />
    <TextView
        android:layout_below="@+id/bar5"
        android:textSize = "15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#c96520"
        android:text = "@string/warring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>